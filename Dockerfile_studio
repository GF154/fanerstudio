# ðŸ‡­ðŸ‡¹ KreyÃ²l IA Studio - Docker Image
FROM python:3.11-slim

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsndfile1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements_studio.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_studio.txt

# Copy application
COPY app/ ./app/
COPY app_studio_dark.html .
COPY traduire_texte.py .
COPY generer_audio_huggingface.py .
COPY podcast_creator.py .

# Create output directory
RUN mkdir -p output

# Expose port
EXPOSE 8000

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Run application
CMD ["python", "-m", "app.main"]

