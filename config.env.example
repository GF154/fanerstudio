# ============================================================
# ðŸ‡­ðŸ‡¹ KREYÃ’L IA - ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env and fill in your values
# Never commit .env to git!
# ============================================================

# ============================================================
# GENERAL SETTINGS
# ============================================================
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# ============================================================
# API KEYS (Optional - for enhanced features)
# ============================================================

# OpenAI (for GPT script generation & Whisper STT)
OPENAI_API_KEY=sk-your-openai-key-here

# ElevenLabs (for premium TTS)
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Anthropic Claude (for script generation)
ANTHROPIC_API_KEY=your-anthropic-key-here

# AssemblyAI (for STT)
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# ============================================================
# REDIS (Optional - for caching & background jobs)
# ============================================================
# Local development
REDIS_URL=redis://localhost:6379

# Production (Render.com will provide this)
# REDIS_URL=redis://red-xxxxx:6379

# ============================================================
# DATABASE (Optional - for user management)
# ============================================================
# SQLite (default)
DATABASE_URL=sqlite:///./kreyol_ia.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================================
# CLOUD STORAGE (Optional - for file uploads)
# ============================================================

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=kreyol-ia-uploads
# AWS_REGION=us-east-1

# Google Cloud Storage
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCS_BUCKET_NAME=kreyol-ia-uploads

# ============================================================
# SERVER SETTINGS
# ============================================================
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-domain.com

# ============================================================
# FILE UPLOAD LIMITS
# ============================================================
MAX_FILE_SIZE_MB=50
MAX_PDF_PAGES=500

# ============================================================
# TTS SETTINGS
# ============================================================
DEFAULT_TTS_ENGINE=gtts
DEFAULT_VOICE=ht

# ============================================================
# CELERY (Background Jobs - Optional)
# ============================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================
# MONITORING (Optional)
# ============================================================
ENABLE_METRICS=true
LOG_LEVEL=INFO

